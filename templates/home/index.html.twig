{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>

		.p-6 {
			padding: 1rem;
		}
		.justify-between {
			justify-content: space-between;
		}
		.flex {
			display: flex;
		}
		.items-center {
			align-items: center;
		}
		.bg-blue {
			background-color: #00a8f3
		}
		.bg-black {
			background-color: black;
		}
		.color-black {
			color: black;
		}
		.align-text {
			text-align: center;
		}
		.headerSeperate {
			float: left;
			width: 33.33%;
			padding: 10px;
		}
		.border {
			width: 100px;
			height: 80px;
			border: 4px solid black;
			background-color: white;
			font-size: 20px;
		}
		.loginRegister {
			font-weight: bold;
			background-color: white;
			display: block;
			height: 50px;
			width: 250px;
			text-decoration: none;
		}
		.size {
			font-weight: bold;
			background-color: white;
			display: inline-block;
			height: 50px;
			width: 250px;
			text-decoration: none;
		}
		.mr-6 {
			margin-right: 60px
		}
		.ml-6 {
			margin-left: 60px
		}
		.mb-6 {
			margin-bottom: 60px
		}

		.rcorners {
			border-radius: 40px;
			border: 6px solid #00a8f3;
			padding: 20px;
			width: 500px;
			height: 300px;
			background-color: white;
		}
		a {
			color: black;
		}
		.footer {
			grid-row-start: 4;
			grid-row-end: 4;

		}

		.dropdown-content {
			display: none;
			position: absolute;
			background-color: #f9f9f9;
			min-width: 160px;
			box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
			z-index: 1;
		}

		.dropdown-content a {
			float: none;
			color: black;
			padding: 12px 16px;
			text-decoration: none;
			display: block;
			text-align: left;
		}

		.dropdown:hover .dropdown-content {
			display: block;
		}
	</style>

	<div class="flex justify-between">

		<div class=" align-text flex justify-between">
			<div class="items-center align-text  headerSeperate">
				<a class="border size" href="">Galerija</a>
			</div>
			<div class="items-center align-text  headerSeperate dropdown">
				<button class="border loginRegister " href="">Apie mus</button>
				<div class="dropdown-content">
					<a class="border loginRegister" href="">
						Kontaktai</a>
					<a class="border loginRegister" href="">
						Kainoraštis</a>
					<a class="border loginRegister" href="">
						Informacija</a>
				</div>
			</div>
		</div>

		<div class="items-center align-text">
			<a class="border loginRegister" href="">
				Prisijungti
				<br></a>
			<a class="border loginRegister" href="">
				Registruotis
				<br></a>
		</div>

	</div>
	<div>
		<p class="rcorners">Information about us</p>
	</div>
	<h1 style="margin-top:0.2%; border-bottom: 2px solid black"></h1>
	<footer class="p-6  footer color-black flex justify-between">

		<div class="ml-6 align-text">
			<h2>Kontaktai</h2>
			<p>8 632 22125</p>
			<p>mrdentist@dent.lt</p>
		</div>
		<div class="align-text">
			<h2 class="mb-6">Vieta</h2>
			<p>Studentų g. 50, Kaunas 51368</p>
		</div>
		<div class="mr-6 align-text">
			<h2>Darbo laikas</h2>
			<p>I - IV 9:00 - 20:00</p>
			<p>V 9:00 - 18:00</p>
			<p>VI - VII nedirbame</p>
		</div>
		<div>
			<img src="logo.png">
		</div>
	</footer>


{% endblock %}
