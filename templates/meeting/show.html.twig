{% extends 'base.html.twig' %}

{% block title %}Meeting{% endblock %}

{% block body %}
    <h1>Meeting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ meeting.date ? meeting.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('meeting_index') }}">back to list</a>

    {% if is_granted('ROLE_DOCTOR') %}
        <a href="{{ path('meeting_edit', {'id': meeting.id}) }}">edit</a>
        {{ include('meeting/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
